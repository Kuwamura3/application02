<div class="row">
	<div class="col-xs-3">

		<h2>User info</h2>
		<%= render 'users/profile', user: @user %>

		<h2>New book</h2>
		<%= render 'books/newform', book: @book2 %>

	</div>

	<div class="col-xs-9">
		<h2>Book detail</h2>

		<table class="table">
				<tr>
					<td>
						<%= link_to user_path(@book.user) do %>
							<%= attachment_image_tag(@book.user, :profile_image, :fill, 100, 100, fallback: "no-image-mini.jpg") %><br>
						<%= @book.user.name %>
						<% end %>
					</td>

					<td><%= link_to @book.title, book_path(@book) %></td>

					<td><%= @book.body %></td>

					<% if @book.favorited_by?(current_user) %>
						<td>
							<%= link_to book_favorites_path(@book), method: :delete do %>
								<i class="fa fa-heart" aria-hidden="true" style="color: #555555"></i>
								<%= @book.favorites.count %>
							<% end %>
						</td>
					<% else %>
						<td>
							<%= link_to book_favorites_path(@book), method: :post do %>
								<i class="fa fa-heart-o" aria-hidden="true"></i>
								<%= @book.favorites.count %>
							<% end %>
						</td>
					<% end %>

					<td>コメント数： <%= @book.comments.count %></td>

					<td>
						<% if @user.id == current_user.id %>
							<%= link_to "Edit", edit_book_path(@book), class: "btn-sm btn-success edit_book_#{@book.id}" %>
						<% end %>
					</td>

					<td>
						<% if @user.id == current_user.id %>
							<%= link_to "Destroy", book_path(@book), method: :delete, data: {confirm: "本当に削除してもよろしいですか？"}, class: "btn-sm btn-danger destroy_book_#{@book.id}" %>
						<% end %>
					</td>
				</tr>
			</table>

			<% @comments.each do |comment| %>
				<% if comment.book_id == @book.id %>
					<div>
						<div>
							<%= link_to user_path(comment.user) do %>
								<%= attachment_image_tag(comment.user, :profile_image, :fill, 50, 50, fallback: "no-image-mini.jpg") %>
							<% end %>
							<%= comment.user.name %>
							<% if comment.user.id == current_user.id %>
								<%= link_to "Destroy", book_comment_path(comment.book, comment), method: :delete, class: "btn-sm btn-danger destroy_comment_#{comment.id}" %></td>
							<% end %>
						</div>
						<div>
							<%= comment.comment %>
						</div>
					</div>
				<% end %>
			<% end %>

			<%= form_with(model:[@book, @comment], local: true) do |f| %>
				<%= f.text_area :comment, rows:"5", class: "col-xs-11 comment" %>
				<%= f.submit "送信" %>
			<% end %>

	</div>
</div>