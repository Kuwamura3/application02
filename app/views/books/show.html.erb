<div class="row">
	<div class="col-xs-3">

		<h2>User info</h2>
		<%= render 'users/profile', user: @user %>

		<h2>New book</h2>
		<%= render 'books/newform', book: @book2 %>

	</div>

	<div class="col-xs-9">
		<h2>Book detail</h2>

		<table class="table">
				<tr>
					<td>
						<%= link_to user_path(@book.user) do %>
							<%= attachment_image_tag(@book.user, :profile_image, :fill, 100, 100, fallback: "no-image-mini.jpg") %><br>
						<%= @book.user.name %>
						<% end %>
					</td>

					<td><%= link_to @book.title, book_path(@book) %></td>

					<td><%= @book.body %></td>

					<td id="favorites_btn_<%= @book.id %>">
						<%= render partial: "favorites/favorite", locals: { book: @book} %>
					</td>

					<td>コメント数： <%= @book.comments.count %></td>

					<td>
						<% if @user.id == current_user.id %>
							<%= link_to "Edit", edit_book_path(@book), class: "btn-sm btn-success edit_book_#{@book.id}" %>
						<% end %>
					</td>

					<td>
						<% if @user.id == current_user.id %>
							<%= link_to "Destroy", book_path(@book), method: :delete, data: {confirm: "本当に削除してもよろしいですか？"}, class: "btn-sm btn-danger destroy_book_#{@book.id}" %>
						<% end %>
					</td>
				</tr>
			</table>

<!--コメント編集中↓-->

			<div class="comments_list">
				<%= render partial: "comment/comment", locals: { : } %>
			</div>

			<%= form_with(model:[@book, @comment], remote: true) do |f| %>
				<%= f.text_area :comment, rows:"5", class: "col-xs-11 comment" %>
				<%= f.submit "送信" %>
			<% end %>

	</div>
</div>